extends ../layout/default.pug
block content
	.container
		.jubotron.my-2
		h1 title
		button.btn.btn-primary(onclick="location.href='/board/write';") 리스트로 돌아가기
	ul.my-3(style="list-style:none; padding:0;")
		li.d-flex.p-2.list
			div(style="flex : 30% 0 0") 번호
			div= list.id
		li.d-flex.p-2.list
			div(style="flex : 30% 0 0") 제목
			div= list.title
		li.d-flex.p-2.list
			div(style="flex : 30% 0 0") 작성자
			div= list.writer
		li.d-flex.p-2.list
			div(style="flex : 30% 0 0") 작성일
			div= list.wdate	
		li.d-flex.p-2.list
			div(style="flex : 30% 0 0") 작성내용
			div= list.content
		.p-3.text-center
			button.btn.btn-primary(onclick=`location.href='/board'`) 리스트
			button.btn.btn-primary(onclick=`location.href='/board/write'`) 글작성
			button.btn.btn-primary(onclick=`location.href='/board/update/${list.id}'`) 수정
			button.btn.btn-danger(onclick=`onDelete(${list.id});'`) 삭제